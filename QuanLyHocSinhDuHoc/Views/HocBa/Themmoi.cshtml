@* Thêm mới học bạ *@
<div class="" id="ClassHB">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Thêm mới thông tin học bạ</h2>
                    <div class="clearfix"></div>
                </div>
