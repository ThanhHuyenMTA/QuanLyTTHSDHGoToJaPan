    </div>
    <div class="col-sm-4">
        <img src="~/Content/images/CMT_3.jpg" style="width:366px; height:300px;" /><br />
        <a class="loaicmt" href="#" onclick="LoaiCMTNGH(3)">Loại 3</a>
    </div>
</div>
<div class="row" id="Loai1NGH" style="display:none;">
    @Html.Action("Loai1", "NguoiGiamHo")
</div>
<div class="row" id="Loai2NGH" style="display:none;">
    @Html.Action("Loai2", "NguoiGiamHo")
</div>
<div class="row" id="Loai3NGH" style="display:none;">
    @Html.Action("Loai3", "NguoiGiamHo")
</div>
<style>
    .loaicmt {
        color: #0094ff;
        font-weight: bold;
        margin-left: 47%;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#fileCMT1NGH").change(function () {
            debugger;
            var data = new FormData();
            var files = $("#fileCMT1NGH").get(0).files;
            if (files.length > 0) {
                data.append("HelpSectionFile", files[0]);
            }
            $.ajax({
                url: "/XuLyHocSinh/UpLoadFile",
                type: "POST",
                processData: false,
                contentType: false,
                data: data,
                success: function (data) {
                    if (data == "NO")
                        alert("Lỗi loại file lưu trữ");
                },
                error: function (er) {
                    alert(er);
                }

            });
        });
        $("#fileCMT2NGH").change(function () {
            debugger;
            var data = new FormData();
            var files = $("#fileCMT2NGH").get(0).files;
            if (files.length > 0) {
                data.append("HelpSectionFile", files[0]);
            }
            $.ajax({
                url: "/XuLyHocSinh/UpLoadFile",
                type: "POST",
