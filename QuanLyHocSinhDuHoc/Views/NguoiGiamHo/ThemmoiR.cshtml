                data: data,
                success: function (data) {
                    if (data == "NO")
                        alert("Lỗi loại file lưu trữ");
                },
                error: function (er) {
                    alert(er);
                }

            });
        });
        $("#fileCMT3NGH").change(function () {
            debugger;
            var data = new FormData();
            var files = $("#fileCMT3NGH").get(0).files;
            if (files.length > 0) {
                data.append("HelpSectionFile", files[0]);
            }
            $.ajax({
                url: "/XuLyHocSinh/UpLoadFile",
                type: "POST",
                processData: false,
                contentType: false,
                data: data,
                success: function (data) {
                    if (data == "NO")
                        alert("Lỗi loại file lưu trữ");
                },
                error: function (er) {
                    alert(er);
                }

            });
        });
    });
    function LoaiCMTNGH(id)
    {
        debugger;
        if (id == 1)
        {
            $("#Loai1NGH").css("display", "block");
            $("#Loai2NGH").css("display", "none");
            $("#Loai3NGH").css("display", "none");
        }
        if (id == 2) {
            $("#Loai2NGH").css("display", "block");
            $("#Loai1NGH").css("display", "none");
            $("#Loai3NGH").css("display", "none");
        }
        if (id == 3) {
            $("#Loai3NGH").css("display", "block");
            $("#Loai2NGH").css("display", "none");
            $("#Loai1NGH").css("display", "none");
        }

    }
</script>

