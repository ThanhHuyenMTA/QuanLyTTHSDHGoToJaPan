<script type="text/javascript">
    $(document).ready(function () {
        //format datetime
        var now = new Date();
        var dateNow = now.getMonth() + 1 + "/" + now.getDate() + "/" + now.getFullYear();
        $("#dtpNgaySinh2NGH").val(dateNow);
        $("#dtpGiaTriDen2NGH").val(dateNow);
        $("#dtpNgayCap2NGH").val(dateNow);
        $("#dtpNgaySinh2NGH").daterangepicker({
            singleDatePicker: true,
            calender_style: 'picker_1',
            locale: {
                format: "MM-DD-YYYY"
