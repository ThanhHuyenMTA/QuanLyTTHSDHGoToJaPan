            console.log(start.toISOString(), end.toISOString(), laber);
        });
        $("#dtpGiaTriDen2NGH").daterangepicker({

            singleDatePicker: true,
            calender_style: 'picker_1',
            locale: {
                format: "MM-DD-YYYY"
            },
        }, function (start, end, laber) {
            console.log(start.toISOString(), end.toISOString(), laber);
        });
        $("#dtpNgayCap2NGH").daterangepicker({

            singleDatePicker: true,
            calender_style: 'picker_1',
            locale: {
                format: "MM-DD-YYYY"
            },
        }, function (start, end, laber) {
            console.log(start.toISOString(), end.toISOString(), laber);
        });
    });


    function SaveCMT2NGH() {
        if ($("#SoCMT2NGH").val() == "" || $("#HoTen2NGH").val() == "" || $("#dtpNgaySinh2NGH").val() == "" || $("#QueQuan2NGH").val() == "" ||
            $("#NoiThuongTru2NGH").val() == "" || $("#dtpGiaTriDen2NGH").val() == "" || $("#DanToc2NGH").val() == "" ||
            $("#DauVetRieng2NGH").val() == "" || $("#dtpNgayCap2NGH").val() == "" || $("#NoiCap2NGH").val() == "")
            $("#messThemCMT2NGH").text("Thông tin không được để trống !");
        else {
            $("#messThemCMT2NGH").text("");
            var cmt2 = {
                SoCMT: $("#SoCMT2NGH").val(),
                HoTen: $("#HoTen2NGH").val(),
                TenGoiKhac: $("#TenGoiKhac2NGH").val(),
                NgaySinh: $("#dtpNgaySinh2NGH").val(),
                GioiTinh: $('[name="GioiTinh"]:radio:checked').val(),
                QueQuan: $("#QueQuan2NGH").val(),
                NoiThuongTru: $("#NoiThuongTru2NGH").val(),
                GiaTriDen: $("#dtpGiaTriDen2NGH").val(),
                DanToc: $("#DanToc2NGH").val(),
                DauVetRieng: $("#DauVetRieng2NGH").val(),
                NgayCap: $("#dtpNgayCap2NGH").val(),
                NoiCap: $("#NoiCap2NGH").val(),
                LoaiCMT: 2
            };
            $.ajax({
                type: "POST",
                url: "/NguoiGiamHo/Themmoi2",
                dataType: "json",
                data: JSON.stringify(cmt2),
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data == "Thêm thất bại!") {
                        alert(data);
                        return false;
                    }
                    if (data == "Thêm thành công!") {
                        $("#classNGH").css("display", "none");
                        $("#Loai1NGH").empty();
                        $("#Loai2NGH").empty();
                        $("#Loai3NGH").empty();
                        $("#classNGH").empty();
                        var row = '';
                        row += "<h2 style='color:#0070e2;'><strong>Đã thêm thành công</strong></h2>"
                        row += ""
                        $("#ThongbaoCMTNGH").html(row);
                        return false;
                    }
                    else {
                        window.location.href = "/HocSinh/DetailChung/" + data;
                    }
                },
                error: function (err) {
                    alert("Error: " + err.responseText);
                }
            });
        }
    }
</script>