
@{
    ViewBag.Title = "DetailChung";
    Layout = "~/Views/Share/_LayoutTrangChu.cshtml";
}

<div class="clearfix"></div>
<div class="container">
    <h2>Thông tin chi tiết học sinh</h2>
    <br>
    <ul class="nav nav-pills" role="tablist">
        <li class="nav-item active" id="tabfirst">
            <a class="nav-link active" data-toggle="pill" href="#hocsinh">Học Sinh</a>
        </li>
        <li class="nav-item" id="chuyenTabcmt">
            <a class="nav-link" data-toggle="pill" href="#cmt">Chứng minh thư</a>
        </li>
        <li class="nav-item" id="chuyenTabgks">
            <a class="nav-link" data-toggle="pill" href="#gks">Giấy khai sinh</a>
        </li>
        <li class="nav-item" id="chuyenTabbtn">
            <a class="nav-link" data-toggle="pill" href="#btn">Bằng tốt nghiệp</a>
        </li>
        <li class="nav-item" id="chuyenTabhb">
            <a class="nav-link" data-toggle="pill" href="#hb">Học bạ</a>
        </li>
        <li class="nav-item" id="chuyenTabngh">
            <a class="nav-link" data-toggle="pill" href="#ngh">Người giám hộ</a>
        </li>
        <li class="nav-item" id="chuyenTabshk">
            <a class="nav-link" data-toggle="pill" href="#shk">Số hộ khẩu</a>
        </li>
        <li class="nav-item" id="chuyenTabgct">
            <a class="nav-link" data-toggle="pill" href="#gct">Giấy chứng thực</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div id="hocsinh" class="container tab-pane active">
            <br>
            @Html.Action("DetailHocsinh", "Hocsinh")
        </div>
        <div id="cmt" class="container tab-pane fade">
            <br>
            @Html.Action("Detail","CMT")     
        </div>
        <div id="gks" class="container tab-pane fade">
            @Html.Action("DetailGKS", "GiayKhaiSinh")        
         </div>
        <div id="btn" class="container tab-pane fade">
            @Html.Action("DetailBTN", "BangTotNghiep")
         </div>
        <div id="hb" class="container tab-pane fade">
            @Html.Action("DetailHB", "HocBa")
        </div>
        <div id="ngh" class="container tab-pane fade">
            @Html.Action("Detail", "NguoiGiamHo")
              </div>
        <div id="shk" class="container tab-pane fade">
            @Html.Action("DetailSHK", "SoHoKhau")
           </div>
        <div id="gct" class="container tab-pane fade">
            <br>
            @Html.Action("DetailGCT", "GiayChungThuc")
         </div>

    </div>
</div>
<input id="chuyenTab" name="chuyenTab" value="@Session["chuyenTab"]" hidden="hidden" />
<style>
    .nav li a {
        color: white;
    }

    .nav-pills > li.active > a, .nav-pills > li.active > a:focus, .nav-pills > li.active > a:hover {
        color: red;
        font-weight: bold;
    }

    .tab-content {
        background-color: #fdf4f4;
        min-height: 500px;
    }

    .nav-pills {
        background-color: #365899;
        color: white;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        var tab = $("#chuyenTab").val();

        if (tab == 2)
        {
            $(".nav-item").removeClass("active");
            $("#hocsinh").removeClass("active");
            var element = document.getElementById("chuyenTabcmt");
            element.classList.add("active");
            var element = document.getElementById("cmt");
            element.classList.add("active");
            element.classList.add("in");
        }
        if (tab == 3) {
