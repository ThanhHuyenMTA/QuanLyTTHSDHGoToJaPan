<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Bootstrap -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <!-- NProgress -->
    <link href="~/Content/css/nprogress.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/Content/css/gentelella-custom.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>

    <style>
        .login {
            background-image: url("/Content/images/background.jpg") !important ;
            /*background-size: 1370px 660px;*/
            background-size:100% 930%;
        }

        .msb-loginform {
            border: 1px solid rgba(42,41,43,.16);
            box-shadow: 1px 2px 5px 0 rgba(0,0,0,.15);
            box-sizing: border-box;
            padding: 5px 25px 18px;
            background: #fff;
        }

        .title-box {
            color: #000;
            font-size: 1.28571em;
            font-weight: 700;
            margin-bottom: 10px;
        }
    </style>
</head>
<body class="login">
    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <div class="login_content msb-loginform">
                    <form method="post" action="@Url.Action("Dangnhap", "DangNhap")">
                        <p class="title-box">
                            Đăng nhập
                        </p>
                        <div>
                            <input type="text" name="tenDangNhap" class="form-control" placeholder="Tên tài khoản" />
                        </div>
                        <div>
                            <input type="password" name="matKhau" class="form-control" placeholder="Mật khẩu" />
                        </div>
                        <div>
                            <button id="btnDangNhap" class="btn btn-default submit">Đăng nhập</button>
                            <label id="labNote" style="color: red;font-weight: normal;">@Session["thongbaoDN"]</label>
                            <a class="reset_pass" href="#">Quên mật khẩu?</a>
                        </div>

                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




